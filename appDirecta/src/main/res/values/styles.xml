<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="boton_principal">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/boton_primario</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	
	<style name="CustomWindowTitleBackground">
	    <item name="android:background">@drawable/header</item>
    </style>
 
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">55dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
 	
    </style>
    <style name="fondo">
        <item name="android:background">#f0f0f0</item>
    </style>
	<style name="display">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/display</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	<style name="btn_menu_ptt">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/boton_ptt</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	<style name="labels">
	    <item name="android:textColor">#000</item>
	</style>
	<style name="btn_menu_title">
	    <item name="android:background">@drawable/sel_boton_titlebar</item>
	</style>
</resources>