<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActAnadirEquipo" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblAliasEquipoAgregar"
                style="@style/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre o Alias del equipo:" />

            <EditText
                android:id="@+id/txtAliasEquipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="10" />

            <TextView
                android:id="@+id/lblIdEquipoAgregar"
                style="@style/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identificador del equipo:" />

            <EditText
                android:id="@+id/txtIDEquipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

            <CheckBox
                android:id="@+id/ckEsAdministrador"
                style="@style/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administrador de este grupo" />

            <CheckBox
                android:id="@+id/ckEstado"
                style="@style/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permitir ingreso" />
        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/btnGuardarEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ok" />

</RelativeLayout>