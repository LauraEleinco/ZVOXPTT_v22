<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>




	<style name="boton_principal">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/boton_primario</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	
	<style name="CustomWindowTitleBackground">
	    <item name="android:background">@drawable/header</item>
    </style>
 
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">55dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
 	
    </style>
    <style name="fondo">
        <item name="android:background">#f0f0f0</item>
    </style>
	<style name="display">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/display</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	<style name="btn_menu_ptt">
	    <item name="android:textColor">#fff</item>
	    <item name="android:background">@drawable/boton_ptt</item>
	    <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
	</style>
	<style name="labels">
	    <item name="android:textColor">#000</item>
	</style>
	<style name="btn_menu_title">
	    <item name="android:background">@drawable/sel_boton_titlebar</item>
	</style>




    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/lite_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:navigationBarColor">@color/primary_navigation</item>-->

        <item name="android:windowBackground">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <!--  <item name="android:colorButtonNormal">@color/primary_darker</item>-->
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>


